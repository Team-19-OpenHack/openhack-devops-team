# Create a workflow to test the UserProfile API using NPM
# Because it's Javascript, there's really no need to build this project
# For more information see: https://help.github.com/actions/language-and-framework-guides/building-and-testing-java-with-maven

name: userProfileNodeJSUnitTest

on:
  push:
    branches: [ master ]
    paths:
    - 'apis/userprofile/tests/**'
    - 'apis/userprofile/tests/healthcheck/**'
    - 'apis/userprofile/tests/user/**
    
  pull_request:
    branches: [ master ]
    paths:
    - 'apis/userprofile/tests/**'
    - 'apis/userprofile/tests/healthcheck/**'
    - 'apis/userprofile/tests/user/**
    
jobs:
  build:
  
  runs-on: ubuntu-latest
  
  strategy:
      matrix:
        node-version: [8.x, 10.x, 12.x]

    steps:
    - uses: actions/checkout@v2
    - name: Use Node.js ${{ matrix.node-version }}
      uses: actions/setup-node@v1
      with:
        node-version: ${{ matrix.node-version }}
    - run: npm install
    - run: npm run build --if-present
    - run: npm test
      env:
        CI: true
